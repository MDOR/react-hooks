{
  "name": "@mdor/react-hooks",
  "version": "0.0.0",
  "description": "Collection of different React Hooks, helpful to get up to speed",
  "keywords": [
    "javascript",
    "react",
    "reactjs",
    "browser",
    "node"
  ],
  "sideEffects": true,
  "main": "src/index.js",
  "files": [
    "src/**/*"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "cross-env  BABEL_ENV=es babel src --out-dir dist --ignore '**/*.{test|spec|unit}.js'",
    "prettier": "npx prettier --list-different --write \"./*.{js,jsx,ts,tsx,sass,scss,css,html,md}\" \"./**/*.{js,jsx,ts,tsx,sass,scss,css,html,md}\"",
    "format": "npx prettier --check \"./*.{js,jsx,ts,tsx,sass,scss,css,html,md}\" \"./**/*.{js,jsx,ts,tsx,sass,scss,css,html,md}\"",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --fix --report-unused-disable-directives",
    "test:coverage": "jest --coverage --collectCoverageFrom=\"./src/**\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MDOR/react-hooks.git"
  },
  "author": "Marco Antonio Dominguez Rueda <madmzr@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MDOR/react-hooks/issues"
  },
  "homepage": "https://github.com/MDOR/react-hooks#readme",
  "jest": {
    "verbose": false,
    "silent": false,
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --quiet --config .eslintrc.js --resolve-plugins-relative-to .",
      "git add"
    ],
    "*.{md,html,json,yml,swagger,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/eslint-parser": "^7.5.4",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.16.4",
    "@rollup/plugin-babel": "^5.3.1",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "latest",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^4.3.7",
    "jest": "^29.0.2",
    "lint-staged": "^13.0.3",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react": "^18.2.0"
  }
}
